{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Frontend (Next.js)",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Starting.*$",
					"endsPattern": "^.*Ready.*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "new",
				"group": "development"
			}
		},
		{
			"label": "Start Backend (Flask)",
			"type": "shell",
			"command": "source venv/bin/activate && python app.py",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Running.*$",
					"endsPattern": "^.*Running on.*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "new",
				"group": "development"
			}
		},
		{
			"label": "Start Full Stack",
			"dependsOn": [
				"Start Backend (Flask)",
				"Start Frontend (Next.js)"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "npm install",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "Install Backend Dependencies",
			"type": "shell",
			"command": "source venv/bin/activate && pip install -r requirements.txt",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}